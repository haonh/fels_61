<br>
<div class="row">
  <div class="col-md-8">
    <div class="row">
      <h3 class="text-info">
        <%= t "import_csv_file" %>
      </h3>
      <%= form_tag admin_imports_path, method: :post, multipart: true do %>
        <div class="col-md-11">
          <%= file_field_tag :file, class: "filestyle", required: true %>
        </div>
        <div class="col-md-1">
          <%= submit_tag t("submit_csv_file"), class: "btn btn-primary pull-right" %>
        </div>
      <% end %>
    </div>
    <hr>
    <table id="word_list_table" class="table table-hover table-bordered text-center">
      <tbody>
        <tr>
          <th class="text-center"><%= t "category" %></th>
          <th class="text-center"><%= t "word" %></th>
          <th class="text-center"><%= t "answer" %></th>
          <th class="text-center"><%= t "status" %></th>
          <th class="text-center"><%= t "tool" %></th>
        </tr>
        <% @words.each do |word| %>
          <%= render "admin/words/word", word: word %>
        <% end %>
      </tbody>  
    </table>
    <a href="<%= admin_words_path(format: "csv") %>" class="btn btn-primary">
      <span class="glyphicon glyphicon-download-alt"></span><%= t "download" %>
    </a>
  </div>
  <div class="col-md-4">
    <div>
      <%= form_for [:admin, @word], class: "form" do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <div class="form-group">
          <%= f.label t "word" %>
          <%= f.text_field :content, class: "form-control", placeholder: t("enter_new_word") %>
        </div>
        <div class="form-group">
          <%= f.label :category_id %>
          <%= f.select :category_id, options_for_select(@categories.map{|c| [c.name, c.id ]}, 
            selected_key = f.object.category_id), {}, class: "form-control" %>
        </div>
        <div class="form-group" id="means">
          <div id="answer_list">
            <%= f.fields_for :answers, wrapper: true do |answer_form| %>
              <%= render "shared/error_messages", object: answer_form.object %>
              <div class="row answer-form">
                <div class="col-md-5">
                  <%= answer_form.label t "answer" %>
                  <%= answer_form.text_field :content, required: true, class: "form-control" %>
                </div>
                <div class="col-md-3">
                  <%= answer_form.label t "correct" %>
                  <%= answer_form.check_box :status, class: "checkbox" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <br>
        <%= f.submit t("done"), class: "btn btn-primary pull-right" %>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag "select_only_one_checkbox", "data-turbolinks-track": true %>
