<div class="container-fluid">
  <div class="row" id="results">
    <div class="col-md-8 col-md-offset-4">
      <div class="row">
        <div class="col-md-4">
          <h1><%= @lesson.category.name %></h1>
        </div><br><br>
        <div class="col-md-4">
          <h2>
            <span id="answer_count"><%= Settings.answer_count %></span>/
            <span id="total"><%= @lesson.results.count %></span>
          </h2>
        </div>
      </div>
    </div>
    <%= form_for @lesson, html: {id: "question_form"} do |f| %>
      <%= f.fields_for :results do |result_form| %>
        <%= render "answer_form", form: result_form %>
      <% end %><br>
      <div class="col-md-4 col-md-offset-4">
        <%= f.submit t("done"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
