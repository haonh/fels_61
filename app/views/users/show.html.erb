<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-3">
    <table cellspacing="30">
      <td>
        <%= image_tag @user.avatar.url, size: Settings.avatar.image_size_edit %>
      </td>
      <td><h3>
        <%= @user.name %>
        <%= @user.email %>
      </h3></td>
    </table>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
  </div>
</div>
