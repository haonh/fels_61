<div class="row">
  <% if logged_in? %>
    <aside class="col-md-3"> 
      <%= link_to (image_tag (current_user).avatar.url, size: Settings.avatar.image_size), current_user %>
      <h3>
        <%= current_user.name %><br>
        <%= current_user.email %>
      </h3>     
      <section class="stats">
        <%= render "shared/stats" %>
        <b><%= t("static_pages.learned", number_word: @results.count) %></b>
      </section>
    </aside>
    <div class="col-md-6 stylebutton" >
      <%= link_to t("static_pages.word"), words_path,
        class: "action-button shadow animate blue" %>
      <%= link_to t("static_pages.lesson"), categories_path,
        class: "action-button shadow animate red" %>
    </div>
    <%= render "shared/feed" %>
  <% else %>
    <div class="center jumbotron">
      <h1><%= t "static_pages.welcome" %></h1>
      <%= link_to t("static_pages.sign_in"), login_path, class: "btn btn-lg btn-primary" %>
    </div>
  <% end %>
</div>
