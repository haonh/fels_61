<div class="container">
  <h1><%= t "word.word_list" %></h1>
  <%= render "find_form" %>
  <table class="table table-hover">
    <tr class="success">
      <th><%= t "word.word" %></th>
      <th><%= t "word.mean" %></th>
    </tr>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.content %></td>
      </tr>
    <% end %>
  </table>
  <div class="col-md-6 col-md-offset-3 paginate">
    <%= will_paginate %>
  </div>
</div>
